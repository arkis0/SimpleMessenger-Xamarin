<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimpleMessenger.AddEditContactPage">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Entry x:Name="userIdEntry" IsVisible="False"/>
            <Entry x:Name="firstNameEntry" Placeholder="Imię" />
            <Entry x:Name="lastNameEntry" Placeholder="Nazwisko" />
            <Button x:Name="saveButton" Text="Zapisz" Clicked="SaveContactButton_OnClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>