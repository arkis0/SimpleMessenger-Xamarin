<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimpleMessenger.ChatPage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <DataTemplate x:Key="IncomingDataTemplate">
                <ViewCell>
                    <StackLayout Orientation="Horizontal" Padding="5" HorizontalOptions="Start">
                        <Frame BorderColor="Blue" Padding="10" CornerRadius="10">
                            <Label Text="{Binding Text}" />
                        </Frame>
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
            <DataTemplate x:Key="OutgoingDataTemplate">
                <ViewCell>
                    <StackLayout Orientation="Horizontal" Padding="5" HorizontalOptions="End">
                        <Frame BorderColor="Green" Padding="10" CornerRadius="10">
                            <Label Text="{Binding Text}" />
                        </Frame>
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ListView x:Name="MessageListView" 
          ItemTemplate="{StaticResource MessageTemplateSelector}">
    </ListView>
</ContentPage>