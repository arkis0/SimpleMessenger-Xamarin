<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Simple Messenger"
             x:Class="SimpleMessenger.MainPage">
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="ContactListView" HasUnevenRows="True" SelectionMode="None">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding FullName}">
                            <TextCell.ContextActions>
                                <MenuItem Text="Edit" Clicked="EditContactButton_Clicked" CommandParameter="{Binding .}" />
                                <MenuItem Text="Delete" Clicked="DeleteContactButton_Clicked" CommandParameter="{Binding .}" IsDestructive="True" />
                            </TextCell.ContextActions>
                        </TextCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button Text="Add Contact" Clicked="AddNewContactButton_Clicked" WidthRequest="100" HeightRequest="20" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
